{{>layout/header}}
<main class="container">
    <div class="p-4 p-md-5 mb-4 border text-black rounded bg-white">
        <div class="d-flex flex-column justify-content-center">
            <h1 class="display-4 font-italic">{{board_name}} Diary</h1>
            <article class="blog-post d-lg-none" id="blog-post">
                <hr>
                <h2 class="blog-post-title" id="post-title"></h2>
                <textarea class="border-0" id="post-content" rows="10" readonly ></textarea>
            </article>
            <hr>
            <table class="table">
                <thead class="thead-strong">
                <tr class="table-primary">
                    <th style="width: 5%">#</th>
                    <th style="width: 50%">Title</th>
                    <th style="width: 15%">Author</th>
                    <th style="width: 30%">Updated</th>
                </tr>
                </thead>
                <tbody id="tbody">
                {{#posts}}
                    <tr id='tr id'>
                        <td>{{id}}</td>
                        <td><a id="{{id}}" href="#">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                {{/posts}}
                </tbody>
            </table>
            <div class="p-4">
                <a href="/it/board/posting/{{board_name}}" class="btn btn-primary active" role="button">投稿する</a>
            </div>
        </div>
    </div>
</main><!-- /.container -->
<script src="/js/app/board.js"></script>
{{>layout/footer}}