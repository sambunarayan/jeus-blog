{{>layout/header}}
<main class="container">
    <div class="p-4 p-md-5 mb-4 border text-black rounded bg-white">
        <div class="d-flex flex-column justify-content-center">
            <h1 class="display-4 font-italic">新しいボードを作成する</h1>
            <hr>
            <form action="/it/board/register" method="POST">
                <div class="shadow p-3 mb-3 bg-body rounded">
                    <input type="text" class="form-control" id="boardNameInput" name="boardNameInput" placeholder="Board Name">
                </div>
                <div class="shadow p-3 mb-3 bg-body rounded">
                    <input type="text" class="form-control" id="categoryInput" name="categoryInput" placeholder="it" value="it" readonly>
                </div>
                <div class="shadow p-3 mb-3 bg-body rounded">
                    <label for="contentArea" class="form-label">Details</label>
                    <textarea class="form-control" id="detailsArea" name="detailsArea" rows="5"></textarea>
                </div>
                <input type="submit" class="btn btn-primary active" value="Create"/>
            </form>
        </div>
    </div>
</main><!-- /.container -->
{{>layout/footer}}